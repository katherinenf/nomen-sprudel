<h2 class="p-4 "> Please add words to set with the topic <%= @set.name %> </h2>

<!--------search------------>

<div class="row justify-content-center">
  <div class= "row">
    <div class="col-12 col-lg-6">
      <%= form_with url: "#", method: :get, class: "d-flex search-styling" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<!----all words -------->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="inside">
        <h2 class="list-header"> Words available </h2>
          <% @all_words.each do |word| %>
            <div><%= word.article %> <%= word.german %> <div>
          <% end %>
      </div>
    </div>
  </div>
</div>
