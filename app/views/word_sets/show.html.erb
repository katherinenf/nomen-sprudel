    <div data-answer-target="overlay" class="overlay"></div>

    <div class="container-show">
      <div class="answers" data-answer-target="answers" data-win-target="words">
        <% @words.each do |word|%>
          <button class='round-button d-none'
                  data-action='click->answer#showEnglish'
                  data-answer-target='noun'
                  data-english=<%= word.english%>
                  data-article=<%= word.article %>
                  data-mastery='true'
                  data-id=<%= word.id%>>
            <%= word.german %>
            <p class="d-none" data-answer-target='english'> (<%= word.english %>)</p>
          </button>
        <% end %>
      </div>
    </div>

    <div class="button-show">
      <button class="btn-styling btn-position-quit" data-action="click->answer#popupQuit">Quit</button>
        <div id="popup-quit" class="popup-button-show" data-answer-target="quit">
          <span class="close" data-action="click->answer#popupQuit">&times;</span>
          <p>Are you sure?</p>
          <%= button_to "yes", home_path , method: :get, class: "btn-styling btn-position-play"%>
        </div>
      </div>

    <div class="button-show d-none">
      <div class="popup-button" >
          <p>You win!</p>
          <%= button_to "save", home_path , method: :get, class: "btn-styling btn-position-play",
          data: {
            action: "click->win#updateMasteries"
          }%>
      </div>
      </div>

      <div class="win-show">
        <div id="popup-win" class="popup-win-show" data-answer-target="win">
